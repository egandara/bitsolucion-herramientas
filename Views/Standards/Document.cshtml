@{
    ViewData["Title"] = "Documento de Estándares";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div>
        <a asp-action="DownloadStandardsAsDocx" class="btn btn-success">Descargar Documento de Formato</a>
    </div>
</div>

<div class="card">
    <div class="card-body p-0" style="height: 80vh;">
        <embed src="@Url.Action("GetStandardsAsPdf")" type="application/pdf" width="100%" height="100%" />
    </div>
</div>