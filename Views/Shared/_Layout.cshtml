<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Validador Bit Solución</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-okaidia.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NotebookValidator.Web.styles.css" asp-append-version="true" />
</head>
<body>
    
    <div class="sidebar">
        <div class="sidebar-brand">
            <a class="d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/img/Bit-solucion-logo-menu.png" alt="Bit Solución Logo" />
            </a>
        </div>

        <hr class="sidebar-divider">

        <ul class="sidebar-nav">
            @{
                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                
                // --- MODIFICACIÓN: Lógica para agrupar Validador + Historial ---
                var isValidatorSectionActive = (currentController == "Home" || currentController == "History");
            }

            @if (User.IsInRole("Admin") || User.IsInRole("ValidatorUser"))
            {
                <li class="nav-item">
                    <a class="nav-link @(isValidatorSectionActive ? "" : "collapsed")" data-bs-toggle="collapse" href="#validator-collapse" role="button" aria-expanded="@(isValidatorSectionActive.ToString().ToLower())">
                        <i class="bi bi-file-earmark-check"></i> <span>Validador Notebooks</span>
                    </a>
                    
                    <div class="collapse @(isValidatorSectionActive ? "show" : "")" id="validator-collapse">
                        <ul class="nav-sub-menu">
                            <li class="nav-item @(currentController == "Home" ? "active" : "")">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Nuevo Análisis</a>
                            </li>
                            <li class="nav-item @(currentController == "History" ? "active" : "")">
                                <a class="nav-link" asp-controller="History" asp-action="Index">Historial</a>
                            </li>
                        </ul>
                    </div>
                </li>
            }
            @if (User.IsInRole("Admin") || User.IsInRole("ParameterValidatorUser"))
            {
                <li class="nav-item @(currentController == "ParameterValidator" ? "active" : "")">
                    <a class="nav-link" asp-controller="ParameterValidator" asp-action="Index">
                        <i class="bi bi-filetype-py"></i> <span>Validador Parámetros</span>
                    </a>
                </li>
            }

            @if (User.IsInRole("Admin") || User.IsInRole("TempCleanerUser"))
            {
                <li class="nav-item @(currentController == "TempTable" ? "active" : "")">
                    <a class="nav-link" asp-controller="TempTable" asp-action="Index">
                        <i class="bi bi-trash"></i> <span>Limpieza Tmp</span>
                    </a>
                </li>
            }

            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item @(currentController == "GeminiDoc" ? "active" : "")">
                    <a class="nav-link" asp-controller="GeminiDoc" asp-action="Index">
                        <i class="bi bi-robot"></i> <span>Documentador Gemini</span>
                    </a>
                </li>
            }

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-toggle="collapse" href="#standards-collapse" role="button">
                    <i class="bi bi-book"></i> <span>Estándares</span>
                </a>
                <div class="collapse" id="standards-collapse">
                    <ul class="nav-sub-menu">
                        <li><a class="nav-link" asp-controller="Standards" asp-action="Document">Documento de Estándares</a></li>
                        <li><a class="nav-link" asp-controller="Standards" asp-action="Format">Formato de Documentos</a></li>
                        <li><a class="nav-link" asp-controller="Standards" asp-action="Jobs">Documentos de Pruebas Jobs</a></li>
                        
                        @if (User.IsInRole("Admin"))
                        {
                            <li><hr class="dropdown-divider" style="border-top: 1px solid var(--border-color);"></li>
                            <li><a class="nav-link" asp-controller="ParameterAdmin" asp-action="Index">Lista de Parámetros</a></li>
                        }
                    </ul>
                </div>
            </li>

            @if (User.IsInRole("Admin"))
            {
                <li class="nav-section-title">ADMINISTRACIÓN</li>
                <li class="nav-item @(currentController == "AdminDashboard" ? "active" : "")">
                    <a class="nav-link" asp-controller="AdminDashboard" asp-action="Index">
                        <i class="bi bi-speedometer2"></i> <span>Dashboard Global</span>
                    </a>
                </li>
                <li class="nav-item @(currentController == "Admin" ? "active" : "")">
                    <a class="nav-link" asp-controller="Admin" asp-action="Index">
                        <i class="bi bi-people"></i> <span>Gestionar Usuarios</span>
                    </a>
                </li>
                <li class="nav-item @(currentController == "ValidationRuleAdmin" ? "active" : "")">
                    <a class="nav-link" asp-controller="ValidationRuleAdmin" asp-action="Index">
                        <i class="bi bi-rulers"></i> <span>Admin Reglas Validador</span>
                    </a>
                </li>
            }
        </ul>
        <hr class="sidebar-divider mt-auto">
    </div>

    <div class="main-content">
        
        <nav class="navbar top-bar">
            <div class="container-fluid">
                <button class="btn btn-outline-secondary" id="sidebar-toggle" type="button">
                    <i class="bi bi-list"></i>
                </button>
                
                <div class="ms-auto">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        
        <main role="main" class="p-4">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-core.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/autoloader/prism-autoloader.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/qrcode/qrcode.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>