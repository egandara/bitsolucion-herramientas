@using Microsoft.AspNetCore.Identity
@using NotebookValidator.Web.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var currentUser = await UserManager.GetUserAsync(User);

    // --- NUEVO MENÚ DESPLEGABLE PARA ADMINISTRADORES ---
    // Este bloque solo será visible si el usuario tiene el rol "Admin".
    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Administración
            </a>
            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="adminDropdown">
                <li><a class="dropdown-item" asp-controller="AdminDashboard" asp-action="Index">Dashboard Global</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Gestionar Usuarios</a></li>
                <li><a class="dropdown-item" asp-controller="ParameterAdmin" asp-action="Index">Gestionar Parámetros</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-controller="TestAI" asp-action="Index">Probar Conexión IA</a></li>
            </ul>
        </li>
    }

    <li class="nav-item">
        <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <div class="user-info">
                @if (currentUser != null)
                {
                    <span class="user-name">Hola @currentUser.UserName!</span>
                    <span class="user-credits">Créditos restantes: @currentUser.AnalysisQuota</span>
                }
            </div>
        </a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link">Cerrar sesión</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Registro</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Acceso</a>
    </li>
}
</ul>