@model List<Finding>
@{ 
    ViewData["Title"] = "Detalles del Análisis"; 
}

<div class="results-header mb-3">
    <div>
        <a asp-action="Index" class="btn btn-secondary btn-sm">← Volver al Historial</a>
        <h3 class="mt-2">@ViewData["Title"]</h3>
    </div>
    
    <div class="btn-group">
        <a asp-action="ExportHistoryToExcel" asp-route-id="@ViewBag.AnalysisRunId" class="btn btn-success">
            Exportar a Excel
        </a>
        <a asp-action="DownloadHistoryAsPdf" asp-route-id="@ViewBag.AnalysisRunId" class="btn btn-danger">Descargar PDF</a>
    </div>
</div>

<partial name="_ValidationResults" model="Model" />