@model NotebookValidator.Web.ViewModels.HistoryDashboardViewModel
@{
    ViewData["Title"] = "Dashboard de Historial";
}

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<!-- DataTables CSS CDN -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">

<style>
    .kpi-card {
        transition: transform 0.2s;
        border: none;
        border-radius: 1rem;
        box-shadow: 0 2px 8px rgba(23,42,69,0.08);
        background: #1a2332;
        color: #E6F1FF;
    }

        .kpi-card:hover {
            transform: scale(1.03);
            box-shadow: 0 4px 16px rgba(23,42,69,0.16);
        }

    .kpi-icon {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .table thead th {
        background: #172a46;
        color: #E6F1FF;
        border: none;
    }

    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: #22304a;
    }

    .table {
        color: #E6F1FF;
    }

    .badge {
        font-size: 1rem;
    }

    body {
        background: #0A192F;
    }
</style>

<h1 class="display-4">@ViewData["Title"]</h1>
<p>Aquí puedes ver un resumen y el detalle de todos los análisis que has realizado.</p>

<div class="row mt-4">
    <div class="col-md-3 mb-3">
        <div class="card kpi-card text-center shadow-sm">
            <div class="card-body">
                <i class="bi bi-graph-up kpi-icon text-info"></i>
                <h5 class="mt-2">Análisis Realizados</h5>
                <p class="display-6 fw-bold">@Model.TotalAnalyses</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card kpi-card text-center shadow-sm">
            <div class="card-body">
                <i class="bi bi-file-earmark-text kpi-icon text-warning"></i>
                <h5 class="mt-2">Archivos Analizados</h5>
                <p class="display-6 fw-bold">@Model.TotalFilesAnalyzed</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card kpi-card text-center shadow-sm">
            <div class="card-body">
                <i class="bi bi-exclamation-triangle kpi-icon text-danger"></i>
                <h5 class="mt-2">Problemas Encontrados</h5>
                <p class="display-6 fw-bold">@Model.TotalProblemsFound</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card kpi-card text-center shadow-sm">
            <div class="card-body">
                <i class="bi bi-bug kpi-icon text-secondary"></i>
                <h5 class="mt-2">Problema Más Común</h5>
                <p class="display-6 fw-bold">@Model.MostCommonProblem</p>
            </div>
        </div>
    </div>
</div>

<hr class="my-4" />

<div class="row mt-4">
    <div class="col-lg-4 mb-4">
        <h3>Distribución de Problemas</h3>
        <canvas id="problemsChart"></canvas>
    </div>

    <div class="col-lg-8">
        <h3>Historial Detallado</h3>
        <table id="historyTable" class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Archivos</th>
                    <th>Problemas</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var run in Model.AnalysisRuns)
                {
                    <tr>
                        <td>@run.AnalysisTimestamp.ToString("g")</td>
                        <td>
                            <span class="badge bg-primary">@run.TotalFilesAnalyzed</span>
                        </td>
                        <td>
                            <span class="badge @(run.TotalProblemsFound > 0 ? "bg-danger" : "bg-success")">
                                @run.TotalProblemsFound
                            </span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@run.Id" class="btn btn-outline-info btn-sm" aria-label="Ver detalles del análisis">
                                <i class="bi bi-eye"></i> Ver Detalles
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- jQuery y DataTables JS CDN -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <!-- Chart.js (debe estar ya incluido en tu _Layout, si no, añade el CDN aquí) -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function () {
            $('#historyTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json'
                },
                pageLength: 8,
                lengthMenu: [4, 8, 16, 32],
                order: [[0, 'desc']]
            });
        });

        document.addEventListener('DOMContentLoaded', function () {
            // Obtenemos los datos para el gráfico que pasamos desde el controlador
            const chartData = @Html.Raw(Json.Serialize(Model.ProblemTypeCounts));
            const labels = Object.keys(chartData);
            const data = Object.values(chartData);

            const ctx = document.getElementById('problemsChart').getContext('2d');
            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Número de Problemas',
                        data: data,
                        backgroundColor: [
                            'rgba(255, 202, 40, 0.8)',
                            'rgba(23, 42, 69, 0.8)',
                            'rgba(136, 146, 176, 0.8)',
                            'rgba(255, 99, 132, 0.8)',
                            'rgba(54, 162, 235, 0.8)',
                            'rgba(40, 167, 69, 0.8)',
                            'rgba(255, 193, 7, 0.8)'
                        ],
                        borderColor: '#0A192F',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: {
                                color: '#E6F1FF'
                            }
                        }
                    }
                }
            });
        });
    </script>
}