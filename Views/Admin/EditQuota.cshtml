@model NotebookValidator.Web.Data.ApplicationUser
@{
    ViewData["Title"] = "Editar Cuota";
}

<div class="row">
    <div class="col-md-6">

        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="mb-0">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <h5 class="card-subtitle mb-3 text-muted">Usuario: @Model.Email</h5>
                <hr />

                <form asp-action="EditQuota">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="AnalysisQuota" class="control-label">Cuota de An√°lisis</label>
                        <input asp-for="AnalysisQuota" class="form-control" />
                        <span asp-validation-for="AnalysisQuota" class="text-danger"></span>
                    </div>

                    <div class="mt-4">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Volver a la lista</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}