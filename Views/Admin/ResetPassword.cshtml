@using NotebookValidator.Web.Data
@model ApplicationUser
@{
    ViewData["Title"] = "Reiniciar Contraseña";
}

<h3>@ViewData["Title"]</h3>
<hr />
<h4>¿Estás seguro de que quieres reiniciar la contraseña para el usuario "@Model.UserName"?</h4>
<p>Se generará una nueva contraseña temporal y el usuario deberá cambiarla en su próximo inicio de sesión.</p>

<form asp-action="ResetPasswordConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sí, reiniciar contraseña</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>