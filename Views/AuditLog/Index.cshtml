@model IEnumerable<NotebookValidator.Web.Models.AuditLog>

@{
    ViewData["Title"] = "Registro de Auditoría";
}

<h1 class="mb-4">
    <i class="bi bi-shield-check me-2"></i> @ViewData["Title"]
</h1>

<div class="card">
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Fecha y Hora (UTC)</th>
                    <th>Usuario</th>
                    <th>Tipo de Acción</th>
                    <th>Detalles</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Timestamp.ToString("g")</td>
                        <td>@item.User?.Email</td>
                        <td><code>@item.ActionType</code></td>
                        <td>@item.Details</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>